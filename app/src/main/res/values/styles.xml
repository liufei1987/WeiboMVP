<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="titlebar_style">
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/titlebar_bg</item>
        <item name="android:paddingLeft">@dimen/titlebar_padding</item>
        <item name="android:paddingRight">@dimen/titlebar_padding</item>
    </style>
    <style name="titlebar_title_style">
        <item name="android:textColor">@color/titlebar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/titlebar_title_textsize</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="titlebar_btn_style">
        <item name="android:layout_width">@dimen/titlebar_btn_size</item>
        <item name="android:layout_height">@dimen/titlebar_btn_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="weibo_info_item_style_fragment_me">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="view_fragment_me_style">
        <item name="android:layout_marginTop">@dimen/margintop_view_fragment_me</item>
        <item name="android:background">@color/bg_view_fragment_me</item>
        <item name="android:padding">@dimen/padding_view_fragment_me</item>
    </style>



</resources>
