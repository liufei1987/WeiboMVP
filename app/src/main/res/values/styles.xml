<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="titlebar_style">
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/titlebar_bg</item>
        <item name="android:paddingLeft">@dimen/titlebar_padding</item>
        <item name="android:paddingRight">@dimen/titlebar_padding</item>
    </style>
    <style name="titlebar_title_style">
        <item name="android:textColor">@color/titlebar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/titlebar_title_textsize</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="titlebar_btn_style">
        <item name="android:layout_width">@dimen/titlebar_btn_size</item>
        <item name="android:layout_height">@dimen/titlebar_btn_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="weibo_info_item_style_fragment_me">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="view_fragment_me_style">
        <item name="android:layout_marginTop">@dimen/margintop_view_fragment_me</item>
        <item name="android:background">@color/bg_view_fragment_me</item>
        <item name="android:padding">@dimen/padding_view_fragment_me</item>
    </style>

    <style name="popuptopdialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="animation_popuptop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>

    <style name="weibo_info_attention_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textsize_weibo_info_item_attention</item>
        <item name="android:textColor">@color/hintcolor</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <style name="hinttext_dialog_attention_fragment_me">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hintcolor</item>
        <item name="android:textSize">@dimen/textsize_dialog_attention_fragment_me</item>
    </style>
    <style name="dialog" parent="Theme.AppCompat.Dialog">
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--没有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景昏暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="textstyle_select_tab_fragment_home">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textstyle_unselect_tab_fragment_home">
        <item name="android:textColor">@color/hintcolor</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
