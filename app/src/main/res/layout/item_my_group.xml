<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_my_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全部关注"
        style="@style/hinttext_dialog_attention_fragment_me"
        android:textColor="@color/textcolor"
        android:background="@color/hintbgcolor"
        android:gravity="center"
        android:padding="@dimen/padding_default_group"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/size_delete_item_my_group"
        android:layout_height="@dimen/size_delete_item_my_group"
        android:src="@drawable/icon_delete_item_my_group"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>